<body>


<div class="pageWrap">
  <%= render :partial => '/layouts/top_menu'%>
  <%= render :partial => '/layouts/message_wrap' %>
  <div class="mainContainer">
    <%= render :partial => '/layouts/user_setting_menu'%>
    <div class="contentWrap clearfix">
      <%= yield %>
    </div><!--contentWrap-->
  </div>
