    <label for="user_privacy_search_engine">External Search Engine</label>
    <%= f.select :search_engine, options_for_select(@privacy_option, :selected =>@selected_search)%>
  </div>
  <div class="actions">
    <%= f.submit 'Save Changes' %>
  </div>
<% end %>
