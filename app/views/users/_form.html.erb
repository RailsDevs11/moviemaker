<%= form_for(@user_privacy, :url => '/users/update_privacy' ) do |f| %>
  <% if @user_privacy.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@user_privacy.errors.count, "error") %> prohibited this user_privacy from being saved:</h2>

      <ul>
      <% @user_privacy.errors.full_messages.each do |msg| %>
